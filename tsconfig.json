{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true, // Impedir o uso de any implicitamente
    "strictNullChecks": true, // Habilitar verificação de nulos e indefinidos
    "strictFunctionTypes": true, // Verificar tipos de função com mais rigor
    "strictPropertyInitialization": true, // Exigir inicialização de propriedades em classes
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ]
}